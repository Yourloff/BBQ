<%= form_for @user, data: {turbo: false}, html: { multipart: true } do |f| %>
  <%= render partial: 'partials/form_errors', locals: { errors: @user.errors } %>

  <div class="form-group">
    <%= f.label :name, 'Имя' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :email, 'Электронная почта' %>
    <%= f.text_field :email, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit 'Сохранить', class: 'btn btn-primary' %>
    или <%= link_to 'вернуться', :back %>
  </div>
<% end %>
