<div class="text-center">
  <h1><%= @user.name %></h1>
  <%= image_tag user_avatar(@user) %>
  <% if @user == current_user %>
    <p class="buffer-top">
      <%= link_to I18n.t('views.users.edit.header'), edit_user_path(@user),
                  class: 'btn btn-light' %>
    </p>
  <% end %>
</div>
<div class="row">
  <div class="col-md-12">
    <% if @user.events.any? %>
      <h3 class="buffer-bottom"><%= I18n.t('views.users.show.organized') %>:</h3>
      <div class="row">
        <%= render partial: 'events/event', collection: @user.events %>
      </div>
    <% else %>
      <p class="buffer-top"><%= I18n.t('views.users.show.organized') %></p>
    <% end %>
  </div>
</div>
