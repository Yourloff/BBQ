<h1>Доступ только по пин-коду</h1>

<%= form_tag('', method: 'post', data: { turbo: false }) do -%>
  <div class="form-group">
    <%= label :pincode, I18n.t('activerecord.attributes.event.pincode') %>
    <%= text_field_tag :pincode, params[:pincode], class: 'form-control' %>
  </div>

  <div class="actions">
    <%= submit_tag 'Войти', class: 'btn btn-primary' %>
  </div>
<% end %>

<%= link_to 'На главную', events_path %>
