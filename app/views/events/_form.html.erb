<%= form_for @event, data: { turbo: false } do |f| %>
  <%= render partial: 'partials/form_errors', locals: { errors: @event.errors } %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :address %>
    <%= f.text_field :address, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :datetime %>
    <p><%= f.datetime_select :datetime, class: 'form-control' %></p>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :pincode %>
    <%= f.text_field :pincode, class: 'form-control' %>
  </div>

  <div class="actions mb-2">
    <%= f.submit t('views.events.form.submit'), class: 'btn btn-primary' %>
    <%= t('views.events.form.or') %>
    <%= link_to t('views.events.form.back'), :back %>
  </div>
<% end %>
