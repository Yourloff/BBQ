<h2>Вход</h2>

<%= form_for(resource, as: resource_name, data: { turbo: false }, url: session_path(resource_name)) do |f| %>

  <div class="mb-3">
    <%= f.label :email, class: 'form-label' %><br/>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', 'aria-describedby': 'emailHelp' %>
  </div>

  <div class="mb-3">
    <%= f.label :password, 'Пароль:', class: 'form-label' %><br/>
    <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="mb-3 form-check">
      <%= f.check_box :remember_me, class: 'form-check-input' %>
      <%= f.label :remember_me, 'Запомнить', class: 'form-check-label' %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit 'Войти', class: 'btn btn-primary' %>
  </div>
<% end %>

<div class="mt-2">
  <%= render "devise/shared/links" %>
</div>