<h2><%= I18n.t('views.users.password.edit.title') %></h2>

<%= form_for(resource, as: resource_name, data: { turbo: false }, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field mb-3">
    <%= f.label :password, I18n.t('views.users.password.edit.new_password') %><br/>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> <%= I18n.t('views.users.password.edit.limit') %>)</em><br/>
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control' %>
  </div>

  <div class="field mb-3">
    <%= f.label :password_confirmation, I18n.t('views.users.password.edit.confirm_new_password') %><br/>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
  </div>

  <div class="actions mb-2">
    <%= f.submit I18n.t('views.users.password.edit.action'), class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
